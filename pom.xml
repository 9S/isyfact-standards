<!-- =============================================================================================
    Haupt Maven Projektmodell für die Konfiguration-API

    Haupt Maven-Aufrufe mit diesem POM:
    - mvn eclipse:eclipse : Überträgt die Jar-Liste nach Eclipse
    - mvn deploy : Übersetzen des Projekts und Jar-Generierung

    Autor Simon Spielmann
    Version $Id: pom.xml 144975 2015-08-18 13:07:56Z sdm_jmeisel $
    ============================================================================================= -->
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>de.bund.bva.pliscommon</groupId>
    <artifactId>plis-ueberwachung</artifactId>
    <packaging>jar</packaging>
    <version>1.4.5</version>
    <name>IsyFact Ueberwachung.</name>

    <parent>
        <groupId>de.bund.bva.isyfact</groupId>
        <artifactId>isyfact-masterpom-lib</artifactId>
        <version>1.3.1</version>
    </parent>

    <!-- =============================================================================================
        Liste der benoetigten Bibliotheken.
        ============================================================================================= -->
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>de.bund.bva.isyfact</groupId>
                <artifactId>isyfact-base-bom</artifactId>
                <version>1.3.6</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <dependencies>
        <!-- Fuer Unterscheidung fachliche vs. technische Fehler -->
        <dependency>
            <groupId>de.bund.bva.isyfact</groupId>
            <artifactId>isy-exception-sst</artifactId>
        </dependency>
        <dependency>
            <groupId>de.bund.bva.pliscommon</groupId>
            <artifactId>plis-serviceapi-sst</artifactId>
            <version>1.4.3</version>
        </dependency>
        <!-- Fuer das Auslesen des BHKZs aus dem Aufrufkontext -->
        <dependency>
            <groupId>de.bund.bva.isyfact</groupId>
            <artifactId>isy-aufrufkontext</artifactId>
        </dependency>
        <!-- Fuer JMX-Annotations -->
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-context</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-test</artifactId>
        </dependency>
        <!-- Für AOP-Interfaces -->
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-aop</artifactId>
        </dependency>
        <dependency>
            <groupId>de.bund.bva.isyfact</groupId>
            <artifactId>isy-logging</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
            <version>3.4</version>
        </dependency>

        <!-- Servlet-API fuer Loadbalancing-Servlet. Wird nur zum Kompilieren benoetigt. -->
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>javax.servlet-api</artifactId>
            <scope>provided</scope>
        </dependency>

        <!--JUnit-Dependency -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>
</project>
