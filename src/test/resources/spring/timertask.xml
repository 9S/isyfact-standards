<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean name="taskScheduler" class="de.bund.bva.isyfact.task.impl.TaskSchedulerImpl">
        <constructor-arg ref="konfiguration"/>
    </bean>

    <bean id="taskTest1" class="de.bund.bva.isyfact.task.TestOperation1"/>
    <bean id="taskTest1-monitor" class="de.bund.bva.isyfact.task.jmx.TaskMonitor"/>
    <bean id="taskTest2" class="de.bund.bva.isyfact.task.TestOperation2"/>
    <bean id="taskTest2-monitor" class="de.bund.bva.isyfact.task.jmx.TaskMonitor"/>
    <bean id="taskTest3" class="de.bund.bva.isyfact.task.TestOperation3"/>
    <bean id="taskTest3-monitor" class="de.bund.bva.isyfact.task.jmx.TaskMonitor"/>

    <bean id="mBeanExporter" class="org.springframework.jmx.export.MBeanExporter">
        <property name="assembler">
            <bean class="org.springframework.jmx.export.assembler.MetadataMBeanInfoAssembler">
                <property name="attributeSource">
                    <bean class="org.springframework.jmx.export.annotation.AnnotationJmxAttributeSource"/>
                </property>
            </bean>
        </property>
        <property name="autodetect" value="false"/>
        <property name="beans">
            <map>
                <entry key="de.bund.bva.isyfact.task:type=TaskMonitor,name=&quot;TaskTest1&quot;"
                       value-ref="taskTest1-monitor"/>
                <entry key="de.bund.bva.isyfact.task:type=TaskMonitor,name=&quot;TaskTest2&quot;"
                       value-ref="taskTest2-monitor"/>
                <entry key="de.bund.bva.isyfact.task:type=TaskMonitor,name=&quot;TaskTest3&quot;"
                       value-ref="taskTest3-monitor"/>
            </map>
        </property>
    </bean>

    <bean id="konfiguration"
          class="de.bund.bva.pliscommon.konfiguration.common.impl.ReloadablePropertyKonfiguration">
        <constructor-arg>
            <list>
                <value>/config/timertask.properties</value>
            </list>
        </constructor-arg>
    </bean>

    <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
        <property name="basenames">
            <list>
                <value>resources/nachrichten/fehler</value>
                <value>resources/nachrichten/ereignisse</value>
            </list>
        </property>
    </bean>

    <bean id="messageSourceHolder" class="de.bund.bva.pliscommon.util.spring.MessageSourceHolder">
        <property name="messageSource" ref="messageSource"/>
    </bean>

    <!-- TODO: Die Ã¼brigen Properties des SecurityAuthenticators injizieren-->
    <bean name="securityAuthenticator"
          class="de.bund.bva.isyfact.task.security.impl.SecurityAuthenticatorImpl">
        <property name="behoerdenkennzeichen" value="${behoerdenkennzeichen}"/>
        <property name="username" value="${username}"/>
        <property name="password" value="${password}"/>
    </bean>

    <!-- Sicherheit -->
