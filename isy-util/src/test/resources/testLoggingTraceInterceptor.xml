<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd 
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd">

	<!-- ====================================================================== 
		Spring Konfiguration für die Test-Cases. ====================================================================== -->

	<!-- Verwende Stub Implementierung für die Tests -->

	<bean id="loggingTraceInterceptor" class="de.bund.bva.pliscommon.util.aop.LoggingTraceInterceptor" />

	<bean id="sst"
		class="de.bund.bva.pliscommon.util.aop.test.LogTimingSstTestBean" />

	<aop:config>
		<aop:pointcut id="loggingTracePointcut"
			expression="@annotation(de.bund.bva.pliscommon.util.annotations.LaufzeitLogging)" />

		<aop:advisor pointcut-ref="loggingTracePointcut"
			advice-ref="loggingTraceInterceptor" />
	</aop:config>

</beans>
